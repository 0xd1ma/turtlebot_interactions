<!--
  Used for visualising turtlebot in action.  
  
  It requires minimal.launch and optionally 3dsensor.launch to already be up and running.
 -->
<launch>
  <arg name="using_fuerte" value="$(optenv TURTLEBOT_USING_FUERTE false)"/>
  <group if="$(arg using_fuerte)">
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find turtlebot_rviz_launchers)/rviz/robot.vcg" />
  </group>
  <group unless="$(arg using_fuerte)">
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find turtlebot_rviz_launchers)/rviz/robot.rviz" />
  </group>
</launch>
